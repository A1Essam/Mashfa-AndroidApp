<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sginindisabled"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/notconfirm" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reversID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Reservation Code : ***"
                    android:textColor="#a800ff"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/alldrinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/drname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/untitled1" />

                        <TextView
                            android:id="@+id/drpayname1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="clip_vertical|fill_horizontal|center_vertical"
                            android:paddingLeft="15dp"
                            android:text="Amr Essam"
                            android:textColor="#a800ff"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/alldrdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/price_icon" />

                            <TextView
                                android:id="@+id/drpayprice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="clip_vertical|fill_horizontal|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="Amr Essam"
                                android:textColor="#a800ff"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/heart_icon" />

                            <TextView
                                android:id="@+id/drpayspec1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="clip_vertical|fill_horizontal|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="Amr Essam"
                                android:textColor="#a800ff"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/loction_icon" />

                            <TextView
                                android:id="@+id/drpaylocation1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0"
                                android:gravity="clip_vertical|fill_horizontal|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="Amr Essam"
                                android:textColor="#a800ff"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_weight="0"
                                app:srcCompat="@drawable/day_icon" />

                            <TextView
                                android:id="@+id/drpayday1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="clip_vertical|fill_horizontal|center_vertical"
                                android:paddingLeft="15dp"
                                android:text="Amr Essam"
                                android:textColor="#a800ff"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/payment_icon" />

                        <TextView
                            android:id="@+id/paymentmathod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="clip_vertical|fill_horizontal|center_vertical"
                            android:paddingLeft="15dp"
                            android:text="Amr Essam"
                            android:textColor="#a800ff"
                            android:textSize="18sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>