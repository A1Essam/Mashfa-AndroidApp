<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".numberOFpayment">

    <TextView
        android:id="@+id/numhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR FAWRY RESERVATION"
        android:textColor="#a800ff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <TextView
        android:id="@+id/numsubhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODE"
        android:textColor="#a800ff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numhead"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/numnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circlebg"
        android:gravity="center"
        android:padding="50dp"
        android:text="999"
        android:textColor="#a800ff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numsubhead"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/numplz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signinenabled"
        android:padding="20dp"
        android:text="Please pay within 24 hours! "
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numnum"
        app:layout_constraintVertical_bias="0.19999999" />

    <TextView
        android:id="@+id/gohome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sginindisabled"
        android:padding="10dp"
        android:text="Home"
        android:textColor="#a800ff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numplz" />
</androidx.constraintlayout.widget.ConstraintLayout>